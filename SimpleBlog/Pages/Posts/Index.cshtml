@page
@model SimpleBlog.Pages.Posts.IndexModel
@{
    ViewData["Title"] = "Blog Posts";
}

<h1>Blog Posts</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Post</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BlogPosts)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Content)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>@item.Author?.UserName</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<div>
    @if (Model.BlogPosts.HasPreviousPage)
    {
        <a asp-page="./Index" asp-route-pageIndex="@(Model.BlogPosts.PageIndex - 1)" class="btn btn-primary">Previous</a>
    }
    @if (Model.BlogPosts.HasNextPage)
    {
        <a asp-page="./Index" asp-route-pageIndex="@(Model.BlogPosts.PageIndex + 1)" class="btn btn-primary">Next</a>
    }
</div>