@model IEnumerable<CrudNet8mvc.Models.Contacto>
@{
    ViewData["Title"] = "Lista de contactos";
}

<h1 class="text-center">Contacto con .Net 8(MVC)</h1>
<div class="row">
    <div class="offset-10 col-3">
        <a asp-action="Create" asp-controller="Home" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa-solid fa-plus" aria-hidden="true"></i>Nuevo Usuario
        </a>
    </div>
</div>
<div class="row">
    <div class="card border">
        <div class="card-header bg-black">
            <h3 class="text-white"><strong>LIsta de usuarios</strong></h3>
        </div> 
        <div class="card-body">
            <div class="table-responsive">
                @if(Model.Count()>0){
                    <table class="table table-bordered" id="tblUsuarios" width="100%" cellpadding="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Id)</th> 
                                <th>@Html.DisplayNameFor(m => m.Nombre)</th> 
                                <th>@Html.DisplayNameFor(m => m.Telefono)</th> 
                                <th>@Html.DisplayNameFor(m => m.Email)</th> 
                                <th>@Html.DisplayNameFor(m => m.FechaDeCreacon)</th> 
                                <th>Acciones</th> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Id)</td>
                                    <td>@Html.DisplayFor(m => item.Nombre)</td>
                                    <td>@Html.DisplayFor(m => item.Telefono)</td>
                                    <td>@Html.DisplayFor(m => item.Email)</td>
                                    <td>@Html.DisplayFor(m => item.FechaDeCreacon)</td>
                                    <td><a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i> Editar</a></td>
                                    <td><a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i> Detalle</a></td>
                                    <td><a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i> Borrar</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }else{
                    <p>Sin registros</p>
                }
            </div>
        </div>
    </div>
</div>
