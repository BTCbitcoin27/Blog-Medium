@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Editar categoria";
}

<br />

<h3 class="text-center">Editar categoria</h3>
<form method="post" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div class="col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-10 offset-1">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" placeholder="Ingresa el nuevo nombre de la categoria" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br /><br />
            <div class="col-10 offset-1">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Order"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Order" class="form-control" placeholder="Ingresa el nuevo número de orden" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group row">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Editar</button>
                        </div>
                        &nbsp;
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Back</a>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}