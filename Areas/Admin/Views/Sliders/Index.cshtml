@{
	ViewData["Title"] = "Lista de sliders";
}
<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Sliders</h2>
		</div>
		<div class="col-4 text-right">
			<a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus">New Slider</i></a>
		</div>
	</div>

	<br />

	<table id="tblSliders" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>id</th>
				<th>Nombre</th>
				<th>Estado</th>
				<th>Image</th>
				<th>Actions</th>
			</tr>
		</thead>

	</table>
</div>

@section Scripts {
	<script src="~/js/Sliders.js"></script>
}

