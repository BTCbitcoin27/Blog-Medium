@{
	ViewData["Title"] = "Lista de articulos";
}
<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Categories</h2>
		</div>
		<div class="col-4 text-right">
			<a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus">Publish article</i></a>
		</div>
	</div>

	<br />

	<table id="tblArticulos" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>id</th>
				<th>Title</th>
				<th>Category</th>
				<th>Image</th>
				<th>CreateDate</th>
				
				<th>Actions</th>
			</tr>
		</thead>

	</table>
</div>

@section Scripts {
	<script src="~/js/Articulos.js"></script>
}

