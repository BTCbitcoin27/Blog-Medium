@{
	ViewData["Title"] = "Lista de categorias";
}
<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Categories</h2>
		</div>
		<div  class="col-4 text-right">
			<a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus">New category</i></a>
		</div>
	</div>

	<br />

	<table id="tblCategorias" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>id</th>
				<th>name</th>
				<th>order</th>
				<th>Options</th>
			</tr>
		</thead>

	</table>
</div>

@section Scripts{
	<script src="~/js/Categoria.js"></script>
}

